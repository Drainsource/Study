@page
@model GuestUI.Pages.BookRoomModel
@{
    ViewData["Title"] = "Book A Room";
}
<h1>Book A Room</h1>

<h2>@Model.RoomType.Title</h2>

<p>
    @Model.RoomType.Description
</p>

<form method="post">
    <div class=" form-group">
        <label asp-for="@Model.Guest.FirstName" ></label>
        <input asp-for="@Model.Guest.FirstName"/>
    </div>
    <div class=" form-group">
        <label asp-for="@Model.Guest.LastName"></label>
        <input asp-for="@Model.Guest.LastName" />
    </div>
    <button type="submit" class="btn btn-primary">Book</button>
</form>